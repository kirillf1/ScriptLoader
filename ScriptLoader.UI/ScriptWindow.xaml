        <Label Content="Скрипт" HorizontalAlignment="Left" Margin="48,30,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,82,0,0" TextWrapping="Wrap" Text="{Binding ScriptBody}" VerticalAlignment="Top" Height="323" Width="712"/>

    </Grid>
</Window>
